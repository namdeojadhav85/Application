<table class="table">
    <tr>
        <th colspan="3">Contact Details</th>
    </tr>
    <tr></tr>
    <tbody data-bind='with: profile'>
        <tr>
            <td>
                <input class="input-large" data-bind='value: FirstName' placeholder="First Name" autofocus="autofocus" />
            </td> 
            <td>
                <input class="input-large" data-bind='value: LastName' placeholder="Last Name" autofocus="autofocus"  />
            </td>
            <td>
                <input class="input-large" data-bind='value: Email' placeholder="Email" autofocus="autofocus" />
            </td>
            <td>
                <select id="sel">
                    <option value="Select Status Type">Select Status Type...</option>
                    <option value="Active">Active</option>
                    <option value="Inactive" selected>Inactive</option>
                </select>
            </td>
        </tr>
    </tbody>
</table>
<hr />
<button class="btn btn-small btn-success" data-bind='click: saveProfile'>Save Contact</button>
<input class="btn btn-small btn-primary" type="button" value="Back To Contact List" data-bind="click:$root.backToProfileList" />

<script src="~/Scripts/CreateEdit.js"></script>
<style>
    .validationMessage {
        color: red;
        font-size: 0.8em;
    }
</style>
